---
import bnrLogo from "@/assets/bnr-logo.png";
import ifflLogo from "@/assets/iff-logo.png";
import bg from "@/assets/skyline-2.webp";
import { Image, getImage } from "astro:assets";
const optimizedBg = await getImage({ src: bg, format: "avif", quality: "max" });
---

<section
  id="hero"
  style={`background-image: url(${optimizedBg.src})`}
  class="bg-cover bg-[42%] min-h-screen w-full relative after:absolute after:bg-black/40 after:w-full after:h-full"
>
  <div
    class="grid px-2 pb-6  w-full h-full z-10 [&>*]:[grid-area:1/1] absolute text-center text-white"
  >
   
    <div class="place-self-center">
      <h1 class="text-2xl sm:text-4xl md:text-5xl/[1.2] font-bold relative z-10 [text-wrap:balance;]">
        A Joint-Venture Between<br />BNR Global and IFF
      </h1>
      <div class="mt-8 flex justify-center gap-8 items-center">
        <Image src={bnrLogo}  alt="BNR Global logo" class="h-24 w-fit object-contain invert"/>
        <a href="http://www.iff.org.cn/" target="_blank" rel="noopener noreferrer">
          <span class="sr-only">Go to IFF website</span>
          <Image src={ifflLogo}  alt="IFF logo" class="h-24 w-fit object-contain"/>
        </a>
      </div>
    </div>
  </div>
</section>
